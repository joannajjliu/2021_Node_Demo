{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "removeComments": true,
      "rootDir": "src",
      "outDir": "dist"
    },
    "include": [
      "src/**/*.json",
      "src/**/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ],
    "lib": ["es2015"]
  }